global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend chinedu-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/chinedu.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend chinedu-tech-backend

backend chinedu-tech-backend
	balance roundrobin
	server 142070-web-01 35.168.1.246:80 check
	server 142070-web-02 18.206.202.223:80 check
